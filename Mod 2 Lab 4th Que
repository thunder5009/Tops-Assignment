#include <stdio.h>
int main() 
{
    int a, b;
    printf("Enter first number: ");
    scanf("%d",&a);
    printf("Enter second number: ");
    scanf("%d",&b);
    printf("\nMath Results:  ");
    printf("\n%d+%d=%d", a, b, a + b);
    printf("\n%d-%d=%d", a, b, a - b);
    printf("\n%d*%d=%d", a, b, a * b);
    printf("\n%d/%d=%d", a, b, a / b);
    printf("\n%d%d=%d", a, b, a % b);
    printf("\nComparison Results:  ");
    printf("\n%d>%d %d", a, b, a > b);
    printf("\n%d==%d %d", a, b, a == b);
    printf("\nLogical Results:  ");
    printf("%d and %d: %d\n", a, b, a && b);
    printf("%d or %d: %d\n", a, b, a || b);
    printf("%d:%d\n", a, b);
}
